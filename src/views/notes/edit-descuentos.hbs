<div class="col-md-4 mx-auto">

    <div class="card">
        <div class="card-header">
            <h3>Editar descuentos</h3>
        </div>

        <div class="card-body">
            <form action="/descuentos/edit-descuentos/{{descuentos._id}}?_method=PUT" method="POST">
                <input type="hidden" name="_method" value="PUT">



                <div class="form-group">
                    <input type="text" name="idDescuento" class="form-control" placeholder="idDescuento" value="{{descuentos.idDescuento}}">
                </div>
                <div class="form-group">
                    <input type="text" name="categoria" class="form-control" placeholder="categoria"
                        value="{{descuentos.categoria}}">
                </div>
                <div class="form-group">
                    <input type="text" name="valor" class="form-control" placeholder="valor"
                        value="{{descuentos.valor}}">
                </div>
                <div class="form-group">

                    <input type="text" name="FechaIngreso" class="form-control" placeholder="Fecha de Ingreso"
                        value="{{descuentos.FechaIngreso}}">
                </div>



                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">
                        Save
                    </button>
                </div>
            </form>
        </div>
    </div>

</div>