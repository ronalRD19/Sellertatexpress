<div class="col-md-4 mx-auto">
    
        <div class="card">
                <div class="card-header">
                    <h3>Editar bodegas</h3>
                </div>

                <div class="card-body">
                    <form action="/bodegas/edit-bodegas/{{bodega._id}}?_method=PUT" method="POST">
                    <input type="hidden" name="_method" value="PUT">

                                         

                                        <div class="form-group">
                                            <input type="text" name="nitBodega" class="form-control" placeholder="Nit" value="{{bodega.nitBodega}}">
                                        </div>
                                        <div class="form-group">
                                            <input type="text" name="nombreBodega" class="form-control" placeholder="Nombre" value="{{bodega.nombreBodega}}">
                                        </div>
                                         <div class="form-group">
                                            <input type="text" name="direccionBodega" class="form-control" placeholder="Direccion" value="{{bodega.direccionBodega}}">
                                        </div>
                    
                                        
                                        <div class="form-group">
                                            <button class="btn btn-primary btn-block" type="submit">
                                                Save
                                            </button>
                                       </div>
                    </form>
                </div>
        </div>

</div>