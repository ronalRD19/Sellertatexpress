<div class="col-md-4 mx-auto">
    
        <div class="card">
                <div class="card-header">
                    <h3>Editar Producto</h3>
                </div>

                <div class="card-body">
                    <form action="/notes/edit-note/{{note._id}}?_method=PUT" method="POST">
                    <input type="hidden" name="_method" value="PUT">

                                        <div class="form-group">
                                            <input type="text" name="nombreProducto" class="form-control" placeholder="Nombre" value="{{note.nombreProducto}}">
                                        </div>
                                        <div class="form-group">
                                            <input type="text" name="marca" class="form-control" placeholder="Marca" value="{{note.marca}}">
                                        </div>
                                         <div class="form-group">
                                            <input type="text" name="precio" class="form-control" placeholder="Precio" value="{{note.precio}}">
                                        </div>
                                        <div class="form-group">
                                            
                                            <input type="text" name="cantidad" class="form-control" placeholder="Precio" value="{{note.cantidad}}">
                                        </div>

                                        <div class="form-group">

                                            <textarea name="descripcion" class="form-control" placeholder="Descripcion">
                                                {{note.descripcion}}
                                            </textarea>
                                        </div>
                                        
                                        <div class="form-group">
                                            <button class="btn btn-primary btn-block" type="submit">
                                                Save
                                            </button>
                                       </div>
                    </form>
                </div>
        </div>

</div>